<% if flash[:notice] %>
  <div class="flash alert alert-danger">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if @back_memo == nil %>
  <h2>このメモは一番新規です</h2>
<% else %>
<table>
    <thead>
      <tr>
        <th>このメモは以下の細分化です</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @back_memo.title %></td>
      </tr>
    </tbody>
</table>
<% end %>

<%= form_with model:@memo, local:true do |f| %>

<table>
    <thead>
      <tr>
        <th>タイトルを入力</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.text_field :title, autofocus: true %></td>
      </tr>
    </tbody>
</table>

<table>
    <thead>
      <tr>
        <th>内容を入力</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.text_area :body, size: "50x20" %></td>
      </tr>
    </tbody>
</table>

<table>
    <thead>
      <tr>
        <th>
          カテゴリー選択
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= f.collection_select(:category_id, Category.where(id: current_user.id), :id, :category_name, {prompt: "選択してください"}) %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to "カテゴリー新規登録はプロフィール編集ページから", edit_user_path(current_user.id) %>
        </td>
      </tr>
    </tbody>
</table>

<!--親id-->
<table>
    <thead>
      <tr>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.hidden_field :parent_id %></td>
      </tr>
    </tbody>
</table>


<%= f.submit "メモ投稿", class:"btn btn-success sign_up" %>
<% end %>