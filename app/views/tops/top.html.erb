<h1>新着TOP</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <% if user_signed_in? %>
        <%= render 'users/profile', user:@user %>
        
      <% else %>
      <p>ログインしよう</p>
      <% end %>
    </div>
    <div class="col-lg-9 jumbotron">
      <div class="shadow-lg p-3 mb-5 bg-white rounded">
        <%= search_form_for @q, url: search_tops_path, class: "d-flex align-items-center justify-content-center" do |f| %> 
          <%= f.label :body, 'メモ内容' %>
          <%= f.search_field :body_cont, class: "search-btn" %>
          
          <%= f.label :category_name, 'カテゴリー' %>
          <%= f.search_field :category_category_name_cont %>
          
          <%= f.submit '検索' %>
          <% end %>
      </div>
      <div>
        <% if @memo1 == nil %>
        <% else %>
          <%= @memo1.title %>
          <%= @memo1.body %>
        <% end %>  
      </div>
      <div>
        <% if @memos == nil %>
        <p>メモを投稿しよう</p>
        <% else %>
          <%= @memos.each do |memo| %>
            <!--<div class="row">-->
            <!--  <div class="col-sm-6">-->
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title"><%= memo.title %></h5>
                    <p class="card-text"><%= memo.body %></p>
                    <div class="d-inline p-2 bg-primary text-white">
                      <%= link_to "go detail", memo_path(memo.id), class: "btn btn-primary" %>
                    </div>
                  </div>
                </div>
            <!--  </div>-->
            <!--</div>-->
          <% end %>
        <% end %>  
      </div>
    </div>
  </div>  
</div>


